void mostrar(matriz vec[],int n)
{int i,j,k;
	for(i=0;i<n;i++)
		for(j=0;j<n;j++)
			for(k=0;k<n;k++)
				cout<<"["<<i<<"].["<<j<<"].["<<k<<"]="<<vec[i].mat[j][k]<<endl;
}

